@model List<CoreBusiness.Product>
@section title{
	<h3>Product list</h3>
}
@if (Model != null && Model.Count() > 0)
{
	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>Product Category</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Quantity</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Category?.Name</td>
					<td>@product.Name</td>
					<td>$@product.Price</td>
					<td>@product.Quantity</td>
					<td><a class="btn btn-link" asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a></td>
					<td><a class="btn btn-link" asp-controller="Products" asp-action="Delete" asp-route-id="@product.ProductId" onclick="return ConfirmDelete()">Delete</a></td>
				</tr>
			}
		</tbody>
	</table>

}
else
{
	<h3 class="text-danger text-center">No Product Found</h3>
}
<a class="btn btn-primary my-3" asp-controller="Products" asp-action="Add">Add</a>
@section Scripts {
	<script>
		function ConfirmDelete() {
			return confirm("Are you sure you want to delete this?");
		}
	</script>
}