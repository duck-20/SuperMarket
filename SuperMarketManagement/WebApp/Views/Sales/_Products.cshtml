@model IEnumerable<Product>

@if (Model != null && Model.Count() > 0)
{
<table class="table table-striped my-4">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Quantity
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var product in Model)
		{
		<tr class="product-row" product-id=@product.ProductId>
			<td>
				@product.Name
			</td>
			<td>
				@product.Quantity
			</td>
		</tr>
		}
	</tbody>
	</table>
}
else
{
	<h3 class="text-danger text-center my-3">
		No Product Found!
	</h3>
}
